<!-- Sign in form -->
<div class="container d-flex flex-wrap justify-content-center justify-content-center pt-5">
  <div class="w-100 align-self-end pt-1 pt-md-4 pb-4" style="max-width: 526px;">
    <h1 class="text-center text-xl-start"><%= t '.title' %></h1>
    <p class="text-center text-xl-start pb-3 mb-3">新規登録はお済みですか? <%= link_to "新規登録画面へ", new_user_path %></p>
    <%= form_with url: user_session_path, local: true do |f| %>
      <div class="position-relative mb-4">
        <div class="form-group">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="mb-4">
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name(:password)  %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit (t 'defaults.login'), class: 'btn btn-primary shadow-primary btn-lg w-100' %>
      </div>
    <% end %>
    <a href="#" class="btn btn-link btn-lg w-100">パスワードをお忘れですか?</a>
  </div>
</div>
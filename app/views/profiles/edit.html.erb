<!-- Sign up form -->
<div class="container d-flex flex-wrap justify-content-center justify-content-center pt-5">
  <div class="w-100 align-self-end pt-1 pt-md-4 pb-4" style="max-width: 526px;">
    <h1 class="text-center text-xl-start"><%= t '.title' %></h1>
    <p class="text-center text-xl-start pb-3 mb-3"></p>
    <%= form_with model: @user, url: profile_path, local: true do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :nickname %>
              <%= f.text_field :nickname, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-12 mb-2">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :grade_and_class %>
              <%= f.select :grade_and_class, options_for_select(grade_and_class_options), {}, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-12 mb-4">
          <div class="form-group">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, class: 'form-control' %>
          </div>
        </div>
      </div>
      <%= f.submit '登録する', class: "btn btn-primary shadow-primary btn-lg w-100" %>
    <% end %>
  </div>
</div>
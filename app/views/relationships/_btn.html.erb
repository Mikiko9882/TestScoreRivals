<% if current_user && current_user.id != user.id %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー解除', user_relationships_path(user), method: :delete, class: 'btn btn-danger btn-block', data: { turbo_method: :delete } %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(user), method: :post, class: 'btn btn-primary btn-block', data: { turbo_method: :post } %>
  <% end %>
<% end %>

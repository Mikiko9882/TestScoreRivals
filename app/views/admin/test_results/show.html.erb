<% content_for(:test_name, @test_result.test_name) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_test_result_path(@test_result), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_test_result_path(@test_result), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= TestResult.human_attribute_name(:id) %></th>
          <td><%= @test_result.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= TestResult.human_attribute_name(:test_name) %></th>
          <td><%= @test_result.test_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= TestResult.human_attribute_name(:user) %></th>
          <td><%= @test_result.user.decorate.full_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= TestResult.human_attribute_name(:score) %></th>
          <td><%= @test_result.score %></td>
        </tr>
        <tr>
          <th scope="row"><%= TestResult.human_attribute_name(:max_score) %></th>
          <td><%= @test_result.max_score %></td>
        </tr>
        <tr>
          <th scope="row"><%= TestResult.human_attribute_name(:achievement_rate) %></th>
          <td><%= @test_result.achievement_rate %></td>
        </tr>
        <tr>
          <th scope="row"><%= TestResult.human_attribute_name(:created_at) %></th>
          <td><%= l @test_result.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
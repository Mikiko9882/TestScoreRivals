<% content_for(:title, t('.title')) %>
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= TestResult.human_attribute_name(:id) %></th>
          <th scope="col"><%= TestResult.human_attribute_name(:test_name) %></th>
          <th scope="col"><%= TestResult.human_attribute_name(:grade_and_class) %></th>
          <th scope="col"><%= TestResult.human_attribute_name(:user) %></th>
          <th scope="col"><%= TestResult.human_attribute_name(:created_at) %></th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <%= render @test_results %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <!-- ページネーション -->
      <%= paginate @test_results %>
    </div>
  </div>
</div>